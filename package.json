{
  "name": "cookiepeek",
  "version": "1.0.0",
  "description": "View, decode, edit, and export cookies in one click. JWT decode, anti-detect ready export, zero telemetry.",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "zip:all": "wxt zip && wxt zip -b firefox",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/ wxt.config.ts",
    "lint:fix": "biome check --write src/ wxt.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "tsc --noEmit && biome check src/ wxt.config.ts && vitest run"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18",
    "wxt": "^0.19.0"
  }
}
